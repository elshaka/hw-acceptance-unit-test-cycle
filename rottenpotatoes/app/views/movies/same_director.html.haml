-#  This file is app/views/movies/same_director.html.haml
%h1= "Other movies with the same director as #{@movie.title}"

- if @movies.any?
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th More Info
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)
- else
  %p= "There are no other movies directed by #{@movie.director}"

= link_to "Back to #{@movie.title}", movie_path(@movie)
